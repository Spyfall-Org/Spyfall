<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="50dp"
                                                   android:background="@drawable/background_text"
                                                   android:layout_marginBottom="16dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_player_number" tools:text="1" android:textStyle="bold"
            android:textColor="@android:color/black" android:textSize="18sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_new_game_name" tools:text="Elijah"
            app:layout_constraintStart_toEndOf="@+id/tv_player_number"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"
            app:layout_constraintTop_toTopOf="@+id/tv_player_number"
            app:layout_constraintBottom_toBottomOf="@+id/tv_player_number"
            app:layout_constraintVertical_bias="0.6" android:textColor="@android:color/secondary_text_light"
            app:layout_constraintEnd_toStartOf="@+id/iv_pencil" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:ellipsize="end" android:singleLine="false" android:maxLines="2"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_pencil"
            android:id="@+id/iv_pencil"
            app:layout_constraintTop_toTopOf="@+id/tv_new_game_name"
            app:layout_constraintBottom_toBottomOf="@+id/tv_new_game_name"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintVertical_bias="0.6"
            android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>