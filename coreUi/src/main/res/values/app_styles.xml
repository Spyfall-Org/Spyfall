<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SpyfallAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/appBackgroundColor</item>
        <item name="accentColor">@color/black</item>
        <item name="onAccentColor">@color/white</item>
        <item name="onPrimaryColor">@android:attr/textColorPrimary</item>
    </style>

    <style name="RedTheme" parent="SpyfallAppTheme">
        <item name="accentColor">@color/red</item>
        <item name="onAccentColor">@color/white</item>
    </style>

    <style name="GreenTheme" parent="SpyfallAppTheme">
        <item name="accentColor">@color/green</item>
        <item name="onAccentColor">@color/black</item>
    </style>

    <style name="BlueTheme" parent="SpyfallAppTheme">
        <item name="accentColor">@color/lightBlue</item>
        <item name="onAccentColor">@color/black</item>
    </style>

    <style name="OrangeTheme" parent="SpyfallAppTheme">
        <item name="accentColor">@color/orange</item>
        <item name="onAccentColor">@color/black</item>
    </style>

    <style name="PurpleTheme" parent="SpyfallAppTheme">
        <item name="accentColor">@color/purple</item>
        <item name="onAccentColor">@color/white</item>
    </style>

</resources>