<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
    <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/join_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusableInTouchMode="true" android:background="@color/colorBackground" android:focusable="true">

        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/pb_join_game"
                app:layout_constraintStart_toStartOf="@+id/btn_join_game_action"
                app:layout_constraintEnd_toEndOf="@+id/btn_join_game_action" android:visibility="invisible"
                app:layout_constraintTop_toTopOf="@+id/btn_join_game_action"
                app:layout_constraintBottom_toBottomOf="@+id/btn_join_game_action" android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" android:elevation="10dp"/>

        <Button
                android:id="@+id/btn_join_game_action"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="42dp"
                android:background="@drawable/background_button_accent"
                android:text="@string/string_join_game"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_username" />

        <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:text="@string/string_join_game"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="parent" />

        <EditText
                android:id="@+id/tv_access_code"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/back_ground_edit_text"
                android:ems="10"
                android:hint="@string/string_join_access_hint"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                android:textCursorDrawable="@drawable/edit_text_custom_cursor"
                app:layout_constraintEnd_toEndOf="@+id/tv_username"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tv_username"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
                android:id="@+id/tv_username"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/back_ground_edit_text"
                android:ems="10"
                android:hint="@string/string_join_name_hint"
                android:inputType="textPersonName"
                android:paddingStart="8dp"
                android:textCursorDrawable="@drawable/edit_text_custom_cursor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/string_enter_access_code"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_username"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/string_enter_username"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/tv_access_code" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
